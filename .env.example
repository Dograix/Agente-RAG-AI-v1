# Configurações do Postgres
POSTGRES_HOST=localhost
POSTGRES_DB=ragdb
POSTGRES_USER=raguser
POSTGRES_PASSWORD=ragpass

# Configurações do Pinecone
PINECONE_API_KEY=sua-chave-api-pinecone
PINECONE_ENVIRONMENT=seu-ambiente-pinecone
PINECONE_INDEX_NAME=rag-documents

# Configurações da OpenAI
OPENAI_API_KEY=sua-chave-api-openai
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Configurações de Chunking
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Configurações de Logging
# Para depuração, você pode usar:
# LOG_LEVEL=DEBUG
# LOG_TO_CONSOLE=True
# DEBUG_MODE=True
LOG_LEVEL=INFO
LOG_TO_CONSOLE=False  # Defina como False para não exibir logs no console
DEBUG_MODE=False      # Defina como True para logs de debug detalhados
LOG_DIR=logs          # Diretório onde os logs serão armazenados

# Configurações de Documentos
DOCUMENTS_DIR=documents

# API
NEXT_PUBLIC_API_URL=http://localhost:8000

# Analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ANALYTICS_DEBUG=false

# Features
NEXT_PUBLIC_ENABLE_DOCUMENT_UPLOAD=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=true

# Limits
NEXT_PUBLIC_MAX_FILE_SIZE=10485760 # 10MB
NEXT_PUBLIC_MAX_FILES=5
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,txt,doc,docx,md